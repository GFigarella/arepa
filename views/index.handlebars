<div class="container">
    <h1>Arepas</h1>

    <h2>Order your arepa</h2>

    {{!-- form where user orders arepa, remember to put inputtype name and value #each comes before #unless, and you close #unless first, then #each --}}

    {{!-- and then list for the arepas in DB --}}

    {{!-- you just ate section.  --}}
    <table class="table table-dark">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Filling</th>
            <th scope="col">Devour?</th>
            </tr>
        </thead>
        {{#each arepas}}
            {{#unless devoured}}
                <form action = "arepaDevour" method="POST">
                    <tbody>
                        <tr>
                            <th scope="row">{{this.id}}</th>
                            <td>{{this.filling}}</td>
                            <td>
                                <input type="hidden" name="arepaDevour" value = "{{id}}">
                                <button type="submit" class="btn btn-light">Devour!</button>
                            </td>
                        </tr>
                    </tbody>
                </form>
            {{/unless}}
        {{/each}}
    </table>


